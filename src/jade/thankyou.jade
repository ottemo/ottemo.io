html(lang='en')
    - var pageId = "thankyou-page";
    title "Thank You"
    head
        meta(charset='UTF-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
        title Ottemo
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block extraStyles
    body(id='#{pageId}')
        .block.article.thankyou
            .container
                img(src='/img/message-sent.svg' alt='Thank You')
                h1.heading.h1 Thank you for your interest in Ottemo Commerce Cloud
                p.text.large
                    | We appreciate your questions and comments. Someone will respond to your inquiry within 1 business day.
